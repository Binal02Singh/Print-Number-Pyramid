n=int(input())
for i in range(1,n+1):
    for s in range(0,i-1):
        print(' ',end='')
    for j in range(1,n-i+2):
        print(j+i-1,end='')
    print()
for i in range(n-1,0,-1):
    for s in range(0,i-1):
        print(' ',end='')
    for j in range(1,n-i+2):
        print(j+i-1,end='')       
    print()
